extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/orders.css")

block content
    main
        if orders.lengh <= 0
            h1 No Order Now !

        else
            ul.orders
                each order in orders
                    li.orders__item
                        h1 #{ order.id }
                        ul.orders__products
                            each p in order.products
                                li.orders__products-item #{ p.product.title} (#{ p.quantity })